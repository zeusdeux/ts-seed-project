{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "sourceMap": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "project": "./",
    "outDir": "./built",

    "strict": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "bin/**/*", "lib/**/*", "config/**/*"],
  "exclude": ["node_modules", "built/**", "**/__tests__/*"]
}
